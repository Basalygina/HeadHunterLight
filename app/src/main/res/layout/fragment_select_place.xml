<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ui.root.place.SelectPlaceFragment">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="@dimen/size_48dp"
        android:layout_height="@dimen/size_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="center"
        android:src="@drawable/arrow_back_24"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/back_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/back_arrow"
        app:layout_constraintStart_toEndOf="@+id/back_arrow"
        android:text="@string/select_place_work"
        android:textSize="@dimen/size_22sp"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="?attr/colorOnPrimary"
        />

    <Button
        android:id="@+id/select_country_button"
        android:layout_marginTop="@dimen/size_24dp"
        style="@style/ButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/country"
        app:icon = "@drawable/arrow_forward_24"
        app:iconGravity = "end"
        app:iconSize = "@dimen/size_24dp"
        android:fontFamily="@font/ys_display_medium"
        />

    <Button
        android:id="@+id/select_region_button"
        style="@style/ButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/select_country_button"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/region"
        app:icon = "@drawable/arrow_forward_24"
        app:iconGravity = "end"
        app:iconSize = "@dimen/size_24dp"
        android:fontFamily="@font/ys_display_medium"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
