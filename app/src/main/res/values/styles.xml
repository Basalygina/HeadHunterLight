<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fragment_team_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyleRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyleBold">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_32sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="VacancyIconsStyle">
        <item name="android:layout_width">@dimen/size_48dp</item>
        <item name="android:layout_height">@dimen/size_48dp</item>
        <item name="android:padding">@dimen/size_12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/size_0dp</item>
        <item name="android:layout_height">@dimen/size_60dp</item>
        <item name="android:background">@drawable/button_background_12dp</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:elevation">@dimen/size_0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputValueStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_60dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:background">@null</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_forward</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
