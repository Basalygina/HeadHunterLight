<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="fragment_team_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyleRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_60dp</item>
    </style>

    <dimen name="size_60dp">60dp</dimen>
</resources>
