<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fragment_team_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyleRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="TextStyleBold">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_32sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="VacancyIconsStyle">
        <item name="android:layout_width">@dimen/size_48dp</item>
        <item name="android:layout_height">@dimen/size_48dp</item>
        <item name="android:padding">@dimen/size_12dp</item>
        <item name="android:layout_gravity">center_vertical</item>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>

    </style>
</resources>
